<%- include('../includes/head.ejs') %>
<link rel='stylesheet' href='/css/forms.css'>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
        <div class='user-message user-message-error'><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action='/login' method='post'>
            <div class="form-control">
                <label for='email'>Email Address</label>
                <input class='<%= validationErrors.find(e => e.param === "email") ? "invalid" : "" %>'
                    type='email' id='email' name='email' value='<%= oldInput.email %>' required>
            </div>
            <div class="form-control">
                <label for='password'>Password</label>
                <input class='<%= validationErrors.find(e => e.param === "password") ? "invalid" : "" %>'
                    type='password' id='password' name='password' required>
                <div class='passwordToggle'>Show Password</div>
            </div>
            <input type='hidden' name='_csrf' value='<%= csrfToken %>'>
            <button type='submit' class='btn'>Log In</button>
            <a href='/reset' class='reset-password'>Forgot password?</a>

        </form>
    </main>

    <script src="/js/showHidePassword.js"></script>
    <%- include('../includes/end.ejs') %>